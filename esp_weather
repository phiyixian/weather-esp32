#define LIGHT_SENSOR 32   // Use ADC pin on ESP32 or analog pin on Arduino
#define BLYNK_TEMPLATE_ID "TMPL6uEIXbG_v"
#define BLYNK_TEMPLATE_NAME "weather app"
#define BLYNK_AUTH_TOKEN "1NLOJJExkXfb5Y-1mAGYaycEJhLvX0kH"

#include <LiquidCrystal_I2C.h>
#include <DHT11.h>
#include <WiFi.h>
#include <WiFiClient.h>
#include <HTTPClient.h>
#include <BlynkSimpleEsp32.h>
#include <ArduinoJson.h>

const char *ssid = "*****";
const char *pass = "*****";

int lcdColumns = 16;
int lcdRows = 2;

BlynkTimer timer;
DHT11 dht11(5);
LiquidCrystal_I2C lcd(0x27, lcdColumns, lcdRows);

void checkWiFi() {
  if(WiFi.status() != WL_CONNECTED){
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("WiFi lost...");
    lcd.setCursor(0, 1);
    lcd.print("Reconnecting");
  }

  WiFi.begin(ssid, pass);
  int retry = 0;
  while(WiFi.status() != WL_CONNECTED && retry < 20){
    delay(500);
    retry++;
  }
}

void setup() {
  Serial.begin(115200);
  lcd.init();
  lcd.backlight();

  lcd.setCursor(0, 0);
  lcd.print("Connecting WiFi");

  // Use Blynk.begin to handle WiFi + Blynk automatically
  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);

  if (WiFi.status() == WL_CONNECTED) {
    lcd.clear();
    lcd.print("WiFi OK");
  } else {
    lcd.clear();
    lcd.print("WiFi Failed");
  }

  timer.setInterval(600000L, getOpenWeather);

  analogSetAttenuation(ADC_11db);
}



void getOpenWeather(){
  HTTPClient http;

  String url = "https://api.openweathermap.org/data/2.5/weather?lat=[LATITUDE]&lon=[LONGITUDE]&appid=[API_KEY]&units=metric";
  http.begin(url);

  int code = http.GET();

  if(code == 200){
    String payload = http.getString();
    Serial.println(payload);

    DynamicJsonDocument doc(2048);
    deserializeJson(doc, payload);

    float outdoorTemp = doc["main"]["temp"];
    float outdoorHumidity = doc["main"]["humidity"];
    int cloud = doc["clouds"]["all"];

    Blynk.virtualWrite(V1, outdoorTemp);
    Blynk.virtualWrite(V2, outdoorHumidity);
    Blynk.virtualWrite(V0, cloud);
  }

  http.end();
}

void loop() {
  Blynk.run();
  timer.run();
  
  static unsigned long lastUpdate = 0;
  if (millis() - lastUpdate > 1000) {
    lastUpdate = millis();

    int lightPercent = analogRead(LIGHT_SENSOR);
    int temperature = dht11.readTemperature();
    int humidity = dht11.readHumidity();

  // Optional: handle DHT11 error
  if (temperature == -1 || humidity == -1) {
    lcd.clear();
    lcd.setCursor(0, 0);
    lcd.print("DHT11 Error!");
    delay(1000);
    return;
  }

  // -------- Line 1 --------
  lcd.setCursor(0, 0);
  lcd.print("Temp:");
  lcd.print(temperature);
  lcd.print("C ");
  Blynk.virtualWrite(V3, temperature);
  Serial.print("Temp: ");
  Serial.println(temperature);


  // ------- Line 2 --------
  lcd.setCursor(0, 1);
  lcd.print("Hum:");
  lcd.print(humidity);
  lcd.print("% ");
  Blynk.virtualWrite(V4, humidity);
  Serial.print("Humidity: ");
  Serial.println(humidity);

  lcd.print("L:");
  lcd.print(lightPercent);
  Blynk.virtualWrite(V5, lightPercent);
  Serial.print("Light: ");
  Serial.println(lightPercent);
  Serial.println(" ");


  delay(1000);
  }
}
